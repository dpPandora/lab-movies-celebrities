<h2>Movie details</h2>
<h3>{{movie.title}}</h3>
<p>{{movie.genre}}</p>
<p>{{movie.plot}}</p>
<p>Cast:</p>
{{#each movie.cast}}
    <hr>
    <p>{{this.name}}</p>
    <li>{{this.occupation}}</li>
    <li>{{this.catchPhrase}}</li>
    <hr>
{{/each}}
<form action="/movies/{{movie._id}}/delete" method="post">
    <button type="submit">Delete?</button>
</form>
<form action="/movies/{{movie._id}}/edit" method="get">
    <button type="submit">Edit?</button>
</form>